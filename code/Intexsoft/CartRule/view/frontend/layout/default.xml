<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <referenceContainer name="before.body.end">
        <container name="cart.rule.config" label="Cart Rule config" htmlTag="div" htmlClass="content">
            <block class="Magento\Framework\View\Element\Template" template="Intexsoft_CartRule::cartRuleConfig.phtml"/>
        </container>
    </referenceContainer>

    <referenceContainer name="page.bottom.container">
        <container name="page.cart.info" label="Before Page Footer" htmlTag="div" htmlClass="content">
            <block class="Magento\Framework\View\Element\Template" template="Intexsoft_CartRule::createCartRule.phtml"/>
        </container>
    </referenceContainer>
</page>
